{
    "name": "jakarias1907/erp-multicompany",
    "description": "ERP Multi-Company System with CodeIgniter 4",
    "license": "MIT",
    "type": "project",
    "homepage": "https://github.com/jakarias1907/erp-multicompany",
    "support": {
        "issues": "https://github.com/jakarias1907/erp-multicompany/issues",
        "source": "https://github.com/jakarias1907/erp-multicompany"
    },
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.0",
        "dompdf/dompdf": "^2.0",
        "phpoffice/phpspreadsheet": "^1.29"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^10.5.16"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit"
    }
}
